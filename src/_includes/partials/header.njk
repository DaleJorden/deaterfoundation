<header class="bg-white/80 backdrop-blur supports-[backdrop-filter]:bg-white/60 border-b border-slate-200 sticky top-0 z-40">
  <div class="mx-auto flex max-w-6xl items-center justify-between gap-4 px-4 py-4 sm:px-6 lg:px-8">
    <a class="flex items-center gap-3" href="/">
      <span class="inline-flex h-12 w-12 items-center justify-center rounded-full bg-primary-600 text-white font-semibold">DF</span>
      <span class="flex flex-col">
        <span class="text-base font-semibold text-slate-900">{{ site.name }}</span>
        <span class="text-sm text-slate-500">{{ site.tagline }}</span>
      </span>
    </a>
    <nav class="hidden items-center gap-6 text-sm font-medium text-slate-700 md:flex" aria-label="Primary">
      {% for item in navigation %}
        {% set isCurrent = page.url == item.url or (item.url != '/' and page.url.startswith(item.url)) %}
        <a
          class="transition-colors hover:text-primary-600 {{ 'text-primary-600 font-semibold' if isCurrent }}"
          href="{{ item.url }}"
          {% if isCurrent %}aria-current="page"{% endif %}
        >{{ item.title }}</a>
      {% endfor %}
    </nav>
    <div class="hidden md:flex">
      <a class="btn-primary" href="/donate/">Donate</a>
    </div>
    <button
      class="md:hidden inline-flex items-center justify-center rounded-full border border-slate-200 bg-white p-2 text-slate-600 shadow-sm"
      type="button"
      aria-expanded="false"
      data-nav-toggle
      aria-controls="mobile-menu"
    >
      <span class="sr-only">Toggle navigation</span>
      <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
      </svg>
    </button>
  </div>
  <div id="mobile-menu" data-mobile-menu class="hidden border-t border-slate-200 bg-white md:hidden">
    <div class="mx-auto flex max-w-6xl flex-col gap-2 px-4 py-4 text-base font-medium text-slate-800">
      {% for item in navigation %}
        <a class="rounded-md px-3 py-2 hover:bg-primary-50 hover:text-primary-700" href="{{ item.url }}">{{ item.title }}</a>
      {% endfor %}
      <a class="btn-primary w-full justify-center" href="/donate/">Donate</a>
    </div>
  </div>
</header>
