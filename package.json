{
  "name": "deaterfoundation",
  "version": "1.0.0",
  "description": "Deater Foundation website built with Eleventy, Tailwind CSS, and Decap CMS.",
  "type": "module",
  "scripts": {
    "dev": "npm-run-all --parallel dev:*",
    "dev:eleventy": "eleventy --serve --quiet",
    "dev:css": "tailwindcss -i ./src/assets/css/tailwind.css -o ./src/assets/css/main.css --watch",
    "build": "npm-run-all build:css build:site build:js",
    "build:css": "tailwindcss -i ./src/assets/css/tailwind.css -o ./src/assets/css/main.css --minify",
    "build:js": "vite build",
    "build:site": "ELEVENTY_ENV=production eleventy",
    "format": "prettier --write \"{src,admin,docs}/**/*.{njk,md,css,json,yml,yaml}\"",
    "clean": "rimraf _site"
  },
  "keywords": [
    "eleventy",
    "11ty",
    "decap-cms",
    "netlify",
    "tailwindcss",
    "nonprofit"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=18.18.0"
  },
  "devDependencies": {
    "@11ty/eleventy": "^3.0.0",
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.10",
    "autoprefixer": "^10.4.17",
    "concurrently": "^8.2.2",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.31",
    "prettier": "^3.1.0",
    "rimraf": "^5.0.5",
    "tailwindcss": "^3.4.0",
    "vite": "^5.0.0"
  }
}
